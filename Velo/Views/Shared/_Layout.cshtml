    <div class="welcome__header">
        <div class="welcome__header__navbar">
            <nav class="navbar bg-transparent">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">
                            <img src="#" alt="logo" />
                        </a>
                    </div>
                    <ul class="nav navbar-nav navbar-right">
